<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tag_widget_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grid_type"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp" />

            <com.tbocek.android.combatmap.view.ImageToggleButton
                android:id="@+id/button_toggle_rect_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/grid_rect" />

            <com.tbocek.android.combatmap.view.ImageToggleButton
                android:id="@+id/button_toggle_hex_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/grid_hex" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grid_appearence"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp" />

            <ImageButton
                android:id="@+id/button_background_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/button_foreground_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_theme_presets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Theme Presets"
            android:layout_column="1"
            android:layout_span="2"/>
    </TableRow>

</TableLayout>